<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task 2 - Form Validation</title>
</head>
<body style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto; padding: 20px;">
    <h1 style="color: #333;">Submit Your Details</h1>
    <form action="/submit" method="POST" onsubmit="return validateForm()">
        <label for="name" style="display: block; margin-bottom: 5px;">Name:</label>
        <input type="text" id="name" name="name" required style="width: 100%; padding: 8px; margin-bottom: 10px;"><br>
        
        <label for="email" style="display: block; margin-bottom: 5px;">Email:</label>
        <input type="email" id="email" name="email" required style="width: 100%; padding: 8px; margin-bottom: 10px;"><br>
        
        <label for="age" style="display: block; margin-bottom: 5px;">Age:</label>
        <input type="number" id="age" name="age" required style="width: 100%; padding: 8px; margin-bottom: 10px;"><br>
        
        <button type="submit" style="background-color: #4CAF50; color: white; padding: 10px 20px; border: none; cursor: pointer;">Submit</button>
    </form>

    <% if (message) { %>
        <h3 style="color: <%= message.includes('successful') ? 'green' : 'red' %>;"><%= message %></h3>
    <% } %>

    <h2 style="margin-top: 20px;">Submissions</h2>
    <ul style="list-style-type: none; padding: 0;">
        <% submissions.forEach(sub => { %>
            <li style="background: #f9f9f9; padding: 10px; margin-bottom: 5px;">
                Name: <%= sub.name %>, Email: <%= sub.email %>, Age: <%= sub.age %>
            </li>
        <% }) %>
    </ul>

    <script>
        function validateForm() {
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const age = document.getElementById('age').value;

            if (name.length < 2) {
                alert('Name must be at least 2 characters long');
                return false;
            }
            if (!email.includes('@')) {
                alert('Please enter a valid email');
                return false;
            }
            if (isNaN(age) || age < 18) {
                alert('Age must be a number and at least 18');
                return false;
            }
            return true;
        }
    </script>
</body>
</html>